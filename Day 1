public class challenge {
public static void patterns(int n){
        for(int i=0 ; i<=n ;i++){
            for(int j=0 ; j<=i ;j++){
            System.err.print("*");
            }
            System.out.println();
        }
}

    public static void main(String[] args) {
        int n=4;
        patterns(n);
    }
}
